<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Group13.CreateAccountPage">
    <ContentPage.Content>
        <StackLayout Margin = "20,20,20,0">
            
            <Entry HorizontalTextAlignment = "Center" Text = "CREATE AN ACCOUNT"/>
            
            <Entry Margin = "0,20,0,0" Placeholder = "Please enter a valid email"/>
            <Entry HorizontalTextAlignment = "Center" FontSize= "Micro" Text = "Your email address will serves as your username"/>
            <Entry Margin="0,20,0,0" Placeholder = "Password"/>
            <Entry Placeholder = "Confirm Password"/>
            
            <Button BackgroundColor = "Gray" Margin = "0,20,0,0" Text = "SIGN UP" 
                    x:Name = "SignUpButton"
                    Clicked = "SignUpButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
